<div class="panel panel-default">
  <div class="panel-body"></div>
  <h1>Welcome to ...</h1>
  <img id="welcome">
</div>



<div class="row">
  <div class="col-md-4 col-md-offset-2">

<h2>Hot Burgers Ready to Eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat It Up!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

</div>


  <div class="col-md-4">

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        {{!-- <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Can't eat this!</button>
        </form> --}}
      </li>
    {{/if}}
  {{/each}}
</ul>

</div></div>

